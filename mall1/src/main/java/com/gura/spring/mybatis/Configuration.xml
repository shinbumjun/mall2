<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 자주 사용하는 type 의 별칭을 등록 해 놓고  Mapper xml 에서 사용할수 있다. -->
	<typeAliases>
		<typeAlias type="com.gura.spring.movie.dto.MovieDto" alias="MovieDto"/>
		<typeAlias type="com.gura.spring.notice.dto.NoticeDto" alias="noticeDto"/>
		<typeAlias type="com.gura.spring.users.UsersDto" alias="usersDto"/>
		<typeAlias type="com.gura.spring.buy.dto.BuyDto" alias="buyDto"/>
	</typeAliases>
	<!-- 필요한 Mapper xml 등록하기  -->
	<mappers>
		<mapper resource="com/gura/spring/mybatis/MovieMapper.xml"/>
		<mapper resource="com/gura/spring/mybatis/NoticeMapper.xml"/>
		<mapper resource="com/gura/spring/mybatis/UsersMapper.xml"/>
		<mapper resource="com/gura/spring/mybatis/BuyMapper.xml"/>
	</mappers>
</configuration>